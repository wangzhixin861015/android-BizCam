<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_above="@+id/paint_foot"
        android:layout_width="80dp"
        android:layout_height="240dp">

        <com.bcnetech.hyphoto.ui.view.DoubleVerticalScaleScrollView
            android:id="@+id/double_vertical_scroll"
            android:background="@color/white"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            app:lf_scale_view_max="100"
            app:lf_scale_view_min="-100" />


        <TextView
            android:id="@+id/tv_num"
            android:layout_width="72dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:background="@drawable/groupx"
            android:gravity="center"
            android:text=""
            android:textColor="#0057FF"
            android:textSize="12sp" />
    </RelativeLayout>
    <ImageView
        android:layout_marginLeft="30dp"
        android:id="@+id/down_arrow"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:background="@drawable/popup_window_arrow_down" />
</LinearLayout>