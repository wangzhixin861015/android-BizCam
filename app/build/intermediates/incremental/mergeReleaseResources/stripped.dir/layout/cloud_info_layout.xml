<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_104"
        android:background="@color/black"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_104"
            android:background="@drawable/title_bg">

            <com.bcnetech.hyphoto.ui.view.TitleView
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true" />
            <com.bcnetech.hyphoto.ui.view.CloudTopSelectView
                android:id="@+id/cloudInfoTopSelectView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>
           <!-- <CloudInfoTopSelectView
                android:id="@+id/cloudInfoTopSelectView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />-->
        </RelativeLayout>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_cloud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_layout"
        android:background="@color/backgroud_new">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="@dimen/dp_8"
                android:layout_marginLeft="1.5dp"
                android:layout_marginRight="1.5dp"
                android:verticalSpacing="@dimen/dp_8"
                android:background="@color/backgroud_new"/>

            <com.bcnetech.hyphoto.ui.view.BottomToolView
                android:id="@+id/bottom_tool_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_112"
                android:layout_alignParentBottom="true"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>
    <!--    <ImageView
            android:id="@+id/big_imgview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_line"
            android:visibility="gone"/>-->
    <com.bcnetech.bcnetechlibrary.view.stickygridheaders.StickyGridHeadersGridView
        android:id="@+id/ablum_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="@dimen/dp_2"
        android:numColumns="4"
        android:scrollbars="vertical"
        android:verticalSpacing="@dimen/dp_2"
        android:background="@color/backgroud"
        android:layout_below="@+id/choiceview_upload"
        android:visibility="gone" />


    <com.bcnetech.hyphoto.ui.view.ChoiceView
        android:visibility="gone"
        android:id="@+id/choiceview_upload"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:background="@color/backgroud"
        android:layout_height="@dimen/dp_112"/>
    <com.bcnetech.hyphoto.ui.view.AlbumViewPager
        android:id="@+id/big_imgview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_layout"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/empty_null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_layout"
        android:background="@color/backgroud_new"
        android:visibility="gone">
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bgnone"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontGreg18"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/clound_null"
            android:alpha="0.4"/>
    </RelativeLayout>


</RelativeLayout>