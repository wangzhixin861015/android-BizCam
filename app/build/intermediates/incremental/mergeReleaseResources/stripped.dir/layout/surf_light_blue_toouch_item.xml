<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/bottom_tool_in_layout"
            android:layout_width="@dimen/dp_148"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/cobox_choose_bg">

            <TextView
                android:id="@+id/light_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_12"
                android:text="123"
                android:gravity="center"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/light_number_text"
                style="@style/FontWhite18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_below="@id/light_name"
                android:layout_centerHorizontal="true"
                android:text="123"
                android:gravity="center" />




        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>