<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/activity_ai360_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <com.bcnetech.hyphoto.ui.view.AIHintView
            android:id="@+id/ai_hint_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/photoViewlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.opengl.GLSurfaceView
                android:id="@+id/surfaceview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <com.bcnetech.hyphoto.ui.view.FocusView
                android:id="@+id/focus_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.bcnetech.hyphoto.ui.view.DrawRectView
                android:id="@+id/draw_rect"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <!--titleview-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_top"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@color/trans_backgroud"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:padding="10dp"
                android:src="@drawable/close"
                app:layout_constraintLeft_toLeftOf="parent" />

            <ImageView
                android:id="@+id/iv_cobox"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:padding="10dp"
                android:src="@drawable/ai_bt"
                app:layout_constraintRight_toRightOf="parent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_cobox">

                <ImageView
                    android:id="@+id/iv_360hint"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@+id/tv_360hint"
                    android:padding="4dp"
                    android:src="@drawable/video_button"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_360hint"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RelativeLayout>
        </android.support.constraint.ConstraintLayout>
        <!--中间遮罩-->
        <com.bcnetech.hyphoto.ui.view.AI360PreView
            android:id="@+id/ai360preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/ll_bottom"
            app:layout_constraintTop_toBottomOf="@+id/cl_top" />
        <!--底部遮罩-->
        <View
            android:id="@+id/bottom_shade"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="parent">

        </View>
        <!--底部布局-->
        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@color/trans_backgroud"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="3"
            app:layout_constraintBottom_toBottomOf="parent">

            <RelativeLayout
                android:id="@+id/rl_rl_scale"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="240dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/rl_Scale"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/horizontal_bg">

                        <com.bcnetech.hyphoto.ui.view.scaleview.HorizontalScaleScrollview
                            android:id="@+id/horizontalscalescrollview"
                            android:layout_width="240dp"
                            android:layout_height="54dp"
                            android:layout_centerInParent="true"
                            app:lf_scale_view_height="8dp"
                            app:lf_scale_view_margin="50dp"
                            app:lf_scale_view_max="100"
                            app:lf_scale_view_min="-100" />

                        <com.bcnetech.hyphoto.ui.view.CameraPointView
                            android:id="@+id/camera_point_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true" />

                        <TextView
                            android:id="@+id/tv_reduce"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_32"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_add"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_4"
                            android:layout_marginRight="@dimen/dp_28"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:visibility="gone" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <com.bcnetech.hyphoto.ui.view.PresetBottomView
                android:id="@+id/preset_bottom_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/rl_Scale"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_weight="1" />

            <RelativeLayout
                android:id="@+id/rl_btn"
                android:layout_width="@dimen/dp_150"
                android:layout_height="0dp"
                android:layout_below="@+id/preset_bottom_view"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <com.bcnetech.hyphoto.ui.view.clickanimview.BamImageView
                    android:id="@+id/camera_main_btn"
                    android:layout_width="@dimen/dp_128"
                    android:layout_height="@dimen/dp_128"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/video_button" />

                <com.bcnetech.hyphoto.ui.view.VideoButtonView
                    android:id="@+id/video_button_btn"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_100"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <com.bcnetech.hyphoto.ui.view.PanoramaEditView
            android:id="@+id/panorama_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.bcnetech.hyphoto.ui.view.BlueToothListNewView
            android:id="@+id/blueToothListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
         