<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_above="@+id/matting_bottom"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_35"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_colours"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@color/white">

            <com.bcnetech.hyphoto.ui.view.colorpickerview.ColorPickerView
                android:id="@+id/colorPickerView"
                android:layout_width="133dp"
                android:layout_height="128dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                app:palette="@drawable/palette"
                app:selector="@drawable/wheel"/>

            <com.bcnetech.hyphoto.ui.view.colorpickerview.ColorPickerHorizontalView
                android:id="@+id/colorPickerHorizontalView"
                android:layout_width="150dp"
                android:layout_height="30dp"
                app:palette="@drawable/palette_white"
                android:layout_marginTop="@dimen/dp_30"
                app:selector="@drawable/wheel_down"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_42"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/combination"
                    android:textSize="12sp"
                    android:textColor="@color/text_item_child"/>


                <com.bcnetech.hyphoto.ui.view.SwitchButton
                    android:id="@+id/switchButton"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    app:sb_show_indicator="false"
                    android:layout_marginLeft="@dimen/dp_50"
                    app:sb_checked_color="#0057FF"
                    app:sb_uncheck_color="#F2F4F7"
                    app:sb_checked="false"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="72dp"
            android:layout_height="230dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_main"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/artwork_master"
                android:padding="@dimen/dp_30"
                android:layout_weight="1"/>

            <RelativeLayout
                android:id="@+id/rl_colours"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/tv_shapeLeft"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/shape_left"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_alignParentLeft="true" />
                <ImageView
                    android:id="@+id/iv_colours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/colours"
                    android:padding="@dimen/dp_30"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_lucency"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/lucency"
                android:padding="@dimen/dp_30"
                android:layout_weight="1"/>

        </LinearLayout>


    </LinearLayout>


    <ImageView
        android:id="@+id/down_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="@drawable/popup_window_arrow_down" />


    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>