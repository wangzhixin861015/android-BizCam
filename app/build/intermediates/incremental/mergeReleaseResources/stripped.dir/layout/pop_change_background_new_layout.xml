<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent">


    <RelativeLayout
        android:layout_width="265dp"
        android:layout_height="265dp"
        android:background="@drawable/biz_matting_pop_bg"
        android:layout_marginRight="@dimen/dp_40">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_colorDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_40">

        </android.support.v7.widget.RecyclerView>



        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginBottom="@dimen/dp_26"
            android:layout_below="@+id/recycle_colorDefault" />



        <com.bcnetech.hyphoto.ui.view.colorpickerview.ColorPickerNewView
            android:id="@+id/color_pickerNewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginBottom="@dimen/dp_26"
            android:layout_below="@+id/recycle_colorDefault"
            android:visibility="gone"
            android:layerType="software"
            android:tag="landscape" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_colorClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginBottom="@dimen/dp_26"
            android:layout_below="@+id/recycle_colorDefault"
            android:visibility="gone">

        </android.support.v7.widget.RecyclerView>


        <ImageView
            android:id="@+id/iv_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginBottom="@dimen/dp_26"
            android:layout_below="@+id/recycle_colorDefault"
            android:background="@drawable/biz_matting_color_bg">

        </ImageView>






    </RelativeLayout>

    <ImageView
        android:id="@+id/down_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="@drawable/popup_window_arrow_down" />

</LinearLayout>