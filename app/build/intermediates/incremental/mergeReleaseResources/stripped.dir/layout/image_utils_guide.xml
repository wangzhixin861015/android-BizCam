<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="98dp"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/auto_recovery"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/auto_recovery_img"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_42"
                    android:src="@drawable/auto_recovery"
                    />
                <TextView
                    android:id="@+id/auto_recovery_text"
                    android:layout_marginTop="5dp"
                    android:text="@string/auto_healing"
                    android:textColor="#ADB5C2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/light"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/light_img"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_42"
                    android:src="@drawable/new_light"
                    />
                <TextView
                    android:id="@+id/light_text"
                    android:layout_marginTop="5dp"
                    android:text="@string/tune_image"
                    android:textColor="#ADB5C2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/white_balance"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/white_balance_img"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_42"
                    android:src="@drawable/new_white_balance"
                    />
                <TextView
                    android:id="@+id/white_balance_text"
                    android:layout_marginTop="5dp"
                    android:text="@string/white_balance"
                    android:textColor="#ADB5C2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    />

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout

                android:id="@+id/pen"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/pen_img"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_42"
                    android:src="@drawable/new_pen"
                    />
                <TextView
                    android:id="@+id/pen_text"
                    android:layout_marginTop="5dp"
                    android:text="@string/brush"
                    android:textColor="#ADB5C2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/backgroundchang"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/backgroundchang_img"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_42"
                    android:src="@drawable/new_backgroundchang"
                    />
                <TextView
                    android:id="@+id/backgroundchang_text"
                    android:layout_marginTop="5dp"
                    android:text="@string/healing"
                    android:textColor="#ADB5C2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    />

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout

                android:id="@+id/matting"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/matting_img"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_42"
                    android:src="@drawable/new_matting"
                    />
                <TextView
                    android:id="@+id/matting_text"
                    android:layout_marginTop="5dp"
                    android:text="@string/cutout"
                    android:textColor="#ADB5C2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/revolve"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/revolve_img"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_42"
                    android:src="@drawable/new_revolve"
                    />
                <TextView
                    android:id="@+id/revolve_text"
                    android:layout_marginTop="5dp"
                    android:text="@string/crop_rotate"
                    android:textColor="#ADB5C2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>