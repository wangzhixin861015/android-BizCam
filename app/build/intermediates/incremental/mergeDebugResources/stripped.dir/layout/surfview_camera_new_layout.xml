<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black" android:tag="layout/surfview_camera_new_layout_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
        <!--顶部操作栏-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            tools:ignore="MissingConstraints">


            <android.support.constraint.ConstraintLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/camera_close_btn"
                    android:layout_width="@dimen/dp_108"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:paddingLeft="@dimen/dp_40"
                    android:paddingRight="@dimen/dp_40"
                    android:src="@drawable/close1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.bcnetech.hyphoto.ui.view.CoBoxChooseTopView
                    android:id="@+id/coBox_choose_top_view"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    app:layout_constraintLeft_toLeftOf="@+id/camera_setting_btn"
                    app:layout_constraintRight_toRightOf="@+id/camera_close_btn" />

                <ImageView
                    android:id="@+id/camera_setting_btn"
                    android:layout_width="@dimen/dp_108"
                    android:layout_height="0dp"
                    android:paddingLeft="@dimen/dp_30"
                    android:paddingRight="@dimen/dp_30"
                    android:src="@drawable/camera_setting"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>
        <!--相机设置界面-->
        <com.bcnetech.hyphoto.ui.view.CameraSettingView
            android:id="@+id/camera_setting_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!--蓝牙连接界面界面-->
        <com.bcnetech.hyphoto.ui.view.BlueToothListNewView
            android:id="@+id/blueToothListView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!--相机与按钮界面-->
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_layout">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_mcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <!--相机预览界面-->
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/camera_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="w,4:3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <android.opengl.GLSurfaceView
                        android:id="@+id/surfaceview"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.bcnetech.hyphoto.ui.view.CameraWelcomeView
                        android:id="@+id/camera_welcome_view"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!--侧边滑动条-->
                    <com.bcnetech.hyphoto.ui.view.verticalscrollview.VerticalScaleNewView
                        android:id="@+id/scaleView"
                        android:layout_width="80dp"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <com.bcnetech.hyphoto.ui.view.FocusView
                        android:id="@+id/focusview"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="@id/surfaceview"
                        app:layout_constraintTop_toTopOf="parent" />

                    <android.opengl.GLSurfaceView
                        android:id="@+id/rect_view"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="@dimen/dp_200"
                        android:layout_alignParentBottom="true"
                        android:visibility="gone" />
                </android.support.constraint.ConstraintLayout>

                <ImageView
                    android:id="@+id/fake_view_top"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/black"
                    app:layout_constraintTop_toTopOf="@+id/camera_layout" />

                <ImageView
                    android:id="@+id/fake_view_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/camera_layout" />

                <com.bcnetech.hyphoto.ui.view.DottedLineView
                    android:id="@+id/dotted_line"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.bcnetech.bcnetechlibrary.view.LineImageView2
                        android:id="@+id/lineImageView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_422"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true" />

                    <com.bcnetech.bcnetechlibrary.view.SublineImageView
                        android:id="@+id/iv_subline"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/subline_blue" />
                </com.bcnetech.hyphoto.ui.view.DottedLineView>

                <!--底部控制界面-->
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/bottom_control"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/camera_layout">


                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/cl_adjust"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@color/black"
                        app:layout_constraintBottom_toTopOf="@+id/camera_bottom_view"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.bcnetech.hyphoto.ui.view.CameraParamAdjustView
                            android:id="@+id/camera_param_adjust_view"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/lightratioList"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.bcnetech.hyphoto.ui.view.PresetBottomView
                            android:id="@+id/preset_bottom_view"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </android.support.constraint.ConstraintLayout>

                    <com.bcnetech.hyphoto.ui.view.CameraBottomView
                        android:id="@+id/camera_bottom_view"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cl_adjust" />
                </android.support.constraint.ConstraintLayout>


            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
         