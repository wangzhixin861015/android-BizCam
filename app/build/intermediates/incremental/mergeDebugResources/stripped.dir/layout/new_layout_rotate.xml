<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud">

    <com.bcnetech.hyphoto.ui.view.TitleView
        android:id="@+id/rotate_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg"
        android:elevation="2dp" />

    <RelativeLayout
        android:id="@+id/rl_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_rotate"
        android:layout_below="@+id/rotate_title"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/white">

        <com.bcnetech.hyphoto.ui.view.croprotate.UCropView
            android:id="@+id/ucrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wait_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_rotate"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_112"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/backgroud_new"
        android:elevation="9dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/crop_select"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dp_25"
                android:paddingRight="@dimen/dp_25"
                android:paddingBottom="@dimen/dp_30"
                android:paddingTop="@dimen/dp_20"
                android:src="@drawable/crop_n" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mirror_l"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="@dimen/dp_30"
                android:src="@drawable/mirror_ly_selector" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mirror_t"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="@dimen/dp_30"
                android:src="@drawable/mirror_tb_selector" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rotate_r"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_30"
                android:src="@drawable/rotate_r_selector" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rotate_l"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_30"
                android:src="@drawable/rotate_l_selector" />
        </RelativeLayout>
    </LinearLayout>

    <!--<RelativeLayout
        android:layout_width="@dimen/dp_260"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_rotate"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rotate_title"
        android:layout_marginBottom="@dimen/dp_10"
