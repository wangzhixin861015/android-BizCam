<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_new">

    <RelativeLayout
        android:id="@+id/rl_market"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_104"
        android:background="@color/black"

        android:elevation="2dp"
        android:layout_marginBottom="@dimen/dp_12">

        <com.bcnetech.hyphoto.ui.view.TitleView
            android:id="@+id/market_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/title_bg"
            android:focusable="true" />

    </RelativeLayout>


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_widget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_market">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/params_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/market_title"
            android:background="@color/translucent"
            />
    </android.support.v4.widget.SwipeRefreshLayout>



    <com.bcnetech.hyphoto.ui.view.ImageparmsNewView
        android:id="@+id/image_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dg_color_translucent"
        android:elevation="9dp"
        android:visibility="gone" />
</RelativeLayout>