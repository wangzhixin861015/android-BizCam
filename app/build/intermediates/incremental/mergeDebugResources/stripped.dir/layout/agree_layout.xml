<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newbg"
    android:id="@+id/ll_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_104"
        android:background="@drawable/title_bg"
        android:elevation="2dp">

        <com.bcnetech.hyphoto.ui.view.TitleView
            android:id="@+id/sett_title_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true" />
    </RelativeLayout>

    <com.bcnetech.hyphoto.ui.view.SettingUserAgreementView
        android:id="@+id/sett_agree_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroud_new"
        android:visibility="gone" />
</LinearLayout>