<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_layout_base"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@color/translucent">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_104"
        android:layout_height="@dimen/dp_104"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dp_12"
        android:padding="@dimen/dp_34"
        android:src="@drawable/new_close"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:textColor="@color/text_item_child"
        android:text="@string/bceasy_cloud"/>


    <ImageView
        android:id="@+id/iv_upload"
        android:layout_width="@dimen/dp_104"
        android:layout_height="@dimen/dp_104"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_delete"
        android:layout_marginRight="@dimen/dp_12"
        android:padding="@dimen/dp_34"
        android:src="@drawable/download"/>


    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/dp_104"
        android:layout_height="@dimen/dp_104"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_12"
        android:padding="@dimen/dp_34"
        android:src="@drawable/new_delete"/>
</RelativeLayout>