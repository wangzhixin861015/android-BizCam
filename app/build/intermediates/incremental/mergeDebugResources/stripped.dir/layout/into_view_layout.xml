<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_more_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/translucent54" />

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/share_bg"
        android:elevation="10dp">

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="2"
            android:background="@color/share_bg"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_native"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_112"
                android:layout_marginLeft="@dimen/dp_32"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:gravity="center_vertical"
                    android:text="@string/photo_album"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dp_32" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cloud"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_112"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_32"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_album"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:gravity="center_vertical"
                    android:text="@string/bceasy_cloud"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dp_32" />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
