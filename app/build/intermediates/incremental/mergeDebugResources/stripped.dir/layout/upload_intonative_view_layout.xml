<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent"
    android:orientation="vertical">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/image"
    />

    <RelativeLayout
        android:id="@+id/content_layouts"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:background="@color/backgroud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/popbg">
        <TextView
            android:id="@+id/take_photo"
            style="@style/FontWhite14"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center"
            android:text="@string/take_photo"
          />
        <View
            android:layout_below="@+id/take_photo"
            android:layout_marginLeft="@dimen/dp_49"
            android:layout_marginRight="@dimen/dp_49"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/backgroud"/>
        <TextView
            style="@style/FontWhite14"
            android:id="@+id/system_ablum"
            android:layout_below="@id/take_photo"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center"
            android:text="@string/from_naitve_ablum"
            />

        <View
            android:id="@+id/intonative_line"
            android:layout_below="@+id/system_ablum"
            android:layout_marginLeft="@dimen/dp_49"
            android:layout_marginRight="@dimen/dp_49"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/backgroud"/>

        <TextView
            style="@style/FontWhite14"
            android:id="@+id/intonative"
            android:layout_below="@id/intonative_line"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center"
            android:text="@string/intonative2"
            />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
