<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_layout_base"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@color/translucent">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_104"
        android:layout_height="@dimen/dp_104"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dp_12"
        android:padding="@dimen/dp_34"
        android:src="@drawable/new_close"/>


    <TextView
        android:id="@+id/tv_share"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_upload"
        android:padding="@dimen/dp_34"
        android:gravity="center"
        android:textColor="@color/text_item_child26"
        android:text="@string/share"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/iv_upload"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_delete"
        android:layout_marginRight="@dimen/dp_12"
        android:padding="@dimen/dp_34"
        android:textColor="@color/sing_in_color"
        android:text="@string/intonative"
        android:visibility="gone"/>



    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="@dimen/dp_104"
        android:layout_height="@dimen/dp_104"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_other"
        android:layout_marginRight="@dimen/dp_12"
        android:padding="@dimen/dp_28"
        android:src="@drawable/share"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_other"
        android:layout_width="@dimen/dp_104"
        android:layout_height="@dimen/dp_104"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_12"
        android:padding="@dimen/dp_28"
        android:src="@drawable/sys_other"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/dp_104"
        android:layout_height="@dimen/dp_104"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_info"
        android:layout_marginRight="@dimen/dp_12"
        android:padding="@dimen/dp_34"
        android:src="@drawable/new_delete"
        android:visibility="gone"/>


    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_info"
        android:layout_width="@dimen/dp_104"
        android:layout_height="@dimen/dp_104"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_12"
        android:padding="@dimen/dp_34"
        android:src="@drawable/new_info"/>
</RelativeLayout>