<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/backgroud_new">

    <RelativeLayout
        android:id="@+id/rl_parms_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/backgroud"
        android:elevation="2dp">

        <com.bcnetech.hyphoto.ui.view.TitleView
            android:id="@+id/matting_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_bg" />
    </RelativeLayout>


    <com.bcnetech.hyphoto.ui.view.MattingPicView
        android:id="@+id/matting_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/matting_bottom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rl_parms_title" />


    <LinearLayout
        android:id="@+id/matting_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_144"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:elevation="9dp"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/ll_matting"
            android:layout_width="162dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_52"
            android:layout_marginRight="@dimen/dp_52"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/biz_matting_bg"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/mark_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_25"
                android:layout_weight="1"
                android:padding="@dimen/dp_25"
                android:src="@drawable/mark_new_bg_select" />


            <ImageView
                android:id="@+id/mark_main"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/dp_25"
                android:src="@drawable/mark_new_main" />
        </LinearLayout>


        <ImageView
            android:id="@+id/undo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/dp_45"
            android:src="@drawable/undo_new_selector" />

        <ImageView
            android:id="@+id/eye"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/dp_45"
            android:src="@drawable/change_background" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/wait_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">


        <com.bcnetech.hyphoto.ui.view.WaitProgressBarView
            android:id="@+id/wait_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>

