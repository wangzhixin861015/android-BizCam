<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F3F7">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_102"
            android:background="@color/white"
            android:elevation="@dimen/dp_4">

            <ImageView
                android:id="@+id/camera_close_btn"
                android:layout_width="@dimen/dp_102"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:padding="@dimen/dp_25"
                android:src="@drawable/arrow_back" />
        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/netsetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_24"
                    android:text="@string/setting_common"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dp_24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_12"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <com.bcnetech.hyphoto.ui.view.CameraSettingItemView
                        android:id="@+id/subline"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_126" />


                    <com.bcnetech.hyphoto.ui.view.CameraSettingItemView
                        android:id="@+id/flash"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_126" />

                    <com.bcnetech.hyphoto.ui.view.CameraSettingItemView
                        android:id="@+id/watermark"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_126" />


                </LinearLayout>

                <TextView
                    android:id="@+id/pic_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_24"
                    android:text="@string/setting_photo"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dp_24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_12"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <com.bcnetech.hyphoto.ui.view.CameraSettingItemView
                        android:id="@+id/pic_ratio"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_126" />


                    <com.bcnetech.hyphoto.ui.view.CameraSettingItemView
                        android:id="@+id/pic_size"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_126" />

                </LinearLayout>

                <TextView
                    android:id="@+id/video_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_24"
                    android:text="@string/setting_video"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dp_24" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_12"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <com.bcnetech.hyphoto.ui.view.CameraSettingItemView
                        android:id="@+id/video_ratio"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_126" />


                    <com.bcnetech.hyphoto.ui.view.CameraSettingItemView
                        android:id="@+id/video_size"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_126" />

                    <com.bcnetech.hyphoto.ui.view.CameraSettingItemView
                        android:id="@+id/video_duration"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_126" />

                </LinearLayout>


                <com.bcnetech.hyphoto.ui.view.CameraSettingItemView
                    android:id="@+id/black_white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_164"
                    android:visibility="gone" />

                <com.bcnetech.hyphoto.ui.view.CameraSettingItemView
                    android:id="@+id/compress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_164"
                    android:visibility="gone" />
            </LinearLayout>


        </ScrollView>
    </RelativeLayout>
</layout>