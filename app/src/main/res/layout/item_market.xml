<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/dp_20">

    <RelativeLayout
        android:id="@+id/rl_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_preparm"
            android:layout_width="@dimen/dp_710"
            android:layout_height="@dimen/dp_710"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:scaleType="fitEnd" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_106"
        android:layout_below="@+id/rl_img"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_author"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:layout_marginLeft="@dimen/dp_24"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_author"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_toRightOf="@+id/iv_author"
            android:text="author" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_deviceType"
                style="@style/FontWhite12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="author" />

            <TextView
                android:id="@+id/tv_download"
                android:layout_width="@dimen/dp_156"
                android:layout_height="@dimen/dp_56"
                android:layout_marginLeft="@dimen/dp_52"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/blue_item_bg"
                android:gravity="center"
                android:textSize="12sp"
                android:orientation="horizontal">
            </TextView>
            <!--
                        <ImageView
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:layout_marginLeft="@dimen/dp_24"
                            android:src="@drawable/download_white" />

                        <TextView
                            android:id="@+id/tv_downloadCount"
                            style="@style/FontWhite12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginRight="@dimen/dp_24"
                            android:text="author" />-->
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>