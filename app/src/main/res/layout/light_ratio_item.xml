<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_170">

    <RelativeLayout
        android:id="@+id/rel_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_172"
        android:background="@drawable/black_lv2_click"
        android:layout_marginLeft="@dimen/dp_12"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">


        <TextView
            android:id="@+id/name"
            android:layout_width="@dimen/dp_200"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_28"
            android:gravity="left|center_vertical"
            android:ellipsize="end"
            style="@style/FontWhite16"
            android:layout_marginRight="@dimen/dp_5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/name">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/r_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FontGreg14"
                    android:text="@string/left_light_label"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp_24"/>
                <TextView
                    android:id="@+id/r_num_v"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FontGreg14"
                    android:gravity="center"
                    android:layout_toRightOf="@id/r_num"
                    android:layout_marginTop="@dimen/dp_24"/>



                <TextView
                    android:id="@+id/t_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FontGreg14"
                    android:text="@string/background_light_label"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/dp_24"
                    android:layout_alignParentBottom="true"/>

                <TextView
                    android:id="@+id/t_background_v"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FontGreg14"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/dp_24"
                    android:layout_toRightOf="@id/t_background"
                    android:layout_alignParentBottom="true"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/l_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FontGreg14"
                    android:gravity="center"
                    android:text="@string/right_light_label"
                    android:layout_marginTop="@dimen/dp_24"/>

                <TextView
                    android:id="@+id/l_num_v"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FontGreg14"
                    android:gravity="center"
                    android:layout_toRightOf="@id/l_num"
                    android:layout_marginTop="@dimen/dp_24"/>

                <TextView
                    android:id="@+id/t_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FontGreg14"
                    android:text="@string/move_light_label"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_24"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/t_num_v"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FontGreg14"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/t_num"
                    android:layout_marginBottom="@dimen/dp_24"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/t_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FontGreg14"
                    android:text="@string/bottom_light_label"
                    android:layout_marginTop="@dimen/dp_24"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/t_bottom_v"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FontGreg14"
                    android:gravity="center"
                    android:layout_toRightOf="@id/t_bottom"
                    android:layout_marginTop="@dimen/dp_24"/>


                <TextView
                    android:id="@+id/move2_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FontGreg14"
                    android:text="@string/move2_light_label"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_24"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/move2_num_v"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FontGreg14"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/move2_num"
                    android:layout_marginBottom="@dimen/dp_24"/>



            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>