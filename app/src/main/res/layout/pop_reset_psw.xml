<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_aphle40">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image"/>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_312"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_96"
        android:layout_marginRight="@dimen/dp_96"
        android:elevation="10dp"
        android:background="@drawable/white_bg">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_44"
            android:ellipsize="end"
            android:text="发送验证码到"
            android:textSize="22sp"
            android:textColor="#000000"/>

       <!-- <TextView
            android:id="@+id/dialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_title"
            android:layout_marginLeft="@dimen/dp_44"
            android:text="@string/send_phonenum"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="14sp"
            android:textColor="@color/text_item_child"/>-->

        <TextView
            android:id="@+id/dialog_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_title"
            android:layout_marginLeft="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_20"
            android:text="132"
            android:textSize="22sp"
            android:textColor="#00f"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_104"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dialog_cencel"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_width="@dimen/dp_148"
                android:layout_height="@dimen/dp_72"

                android:layout_gravity="left"
                 android:layout_marginRight="@dimen/dp_140"
                android:gravity="center"
                android:text="@string/cancel" />


            <TextView
                android:id="@+id/dialog_ok"
                android:textColor="@color/black"

                android:layout_width="@dimen/dp_148"
                android:layout_height="@dimen/dp_72"
                android:layout_gravity="right"
                android:gravity="center"
                android:textSize="18sp"
                android:text="@string/confirm" />
        </LinearLayout>

       <!-- <TextView
            android:id="@+id/dialog_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/FontBlack14"
            android:gravity="center"
            android:layout_weight="1"
            android:text="确定"/>
        <TextView
            android:id="@+id/dialog_cencel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/FontBlack14"
            android:gravity="center"
            android:layout_weight="1"
            android:text="取消"/>-->


    </RelativeLayout>
</RelativeLayout>