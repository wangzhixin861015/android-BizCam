<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_guide_photoedit"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/photoedit_zoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/guide_photoedit_zoom"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/photoedit_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_196"
        android:src="@drawable/guide_photoedit_choice"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/photoedit_param_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_124"
        android:src="@drawable/guide_photoedit_param_choice"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/photoedit_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:src="@drawable/guide_photoedit_info"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/photoedit_param_adjust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/guide_photoedit_param_adjust"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/photoedit_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_26"
        android:layout_marginLeft="@dimen/dp_12"
        android:src="@drawable/guide_photoedit_part"
        android:visibility="gone" />



    <ImageView
        android:id="@+id/photoedit_repair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_196"
        android:src="@drawable/guide_photoedit_repair"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/photoedit_autorecovery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="68dp"
        android:src="@drawable/guide_photoedit_autorecovery"
        android:visibility="gone" />


    <RelativeLayout
        android:id="@+id/rl_photoedit_matting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guide_know"
            android:layout_centerInParent="true"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="减号标记要去除的内容"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_marginBottom="@dimen/dp_20"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加号标记要保留内容"
                android:textColor="@color/white"
                android:layout_marginLeft="108dp"
                android:layout_below="@+id/tv_four"
                android:textSize="16sp"
                android:visibility="visible" />


            <TextView
                android:id="@+id/tv_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="撤销上一步"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_below="@+id/tv_two"
                android:layout_toLeftOf="@+id/tv_four"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="替换抠图背景颜色"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_16"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/ll_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_one"
                android:gravity="bottom">

                <LinearLayout
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_52"
                    android:layout_marginRight="@dimen/dp_52"
                    android:gravity="bottom"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/iv_one"
                        android:layout_width="43dp"
                        android:layout_height="81dp"
                        android:layout_below="@+id/tv_one"
                        android:layout_weight="1"
                        android:src="@drawable/guide_up" />

                    <ImageView
                        android:id="@+id/iv_two"
                        android:layout_width="31dp"
                        android:layout_height="59dp"
                        android:layout_below="@+id/tv_two"
                        android:layout_weight="1"
                        android:src="@drawable/guide_up" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/iv_three"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:src="@drawable/guide_upthree" />

                <ImageView
                    android:id="@+id/iv_four"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:src="@drawable/guide_up" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_down"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_144"
                android:layout_below="@+id/ll_up">

                <LinearLayout
                    android:layout_width="162dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_52"
                    android:layout_marginRight="@dimen/dp_52"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                </LinearLayout>

                <ImageView
                    android:id="@+id/undo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_45"
                    android:src="@drawable/revocation" />

                <ImageView
                    android:id="@+id/eye"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_45"
                    android:src="@drawable/change_background" />

            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_photoedit_us_matting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_us_hint_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guide_next"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_us_hint_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guide_ok"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_us_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Minus Sign marks the \n areas to be removed."
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_marginBottom="20dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_us_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Plus Sign marks the areas \nto be retained."
                android:layout_marginTop="40dp"
                android:textColor="@color/white"
                android:layout_marginLeft="108dp"
                android:textSize="16sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_us_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel the last step."
                android:layout_alignParentRight="true"
                android:layout_marginTop="88dp"
                android:layout_marginRight="68dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_us_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Replace the background color of the image."
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="40dp"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/ll_us_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_us_one"
                android:gravity="bottom">

                <LinearLayout
                    android:id="@+id/ll_us_one"
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_52"
                    android:layout_marginRight="@dimen/dp_52"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:visibility="invisible">


                    <ImageView
                        android:id="@+id/iv_us_one"
                        android:layout_width="43dp"
                        android:layout_height="81dp"
                        android:layout_weight="1"
                        android:src="@drawable/guide_up"
                        android:visibility="visible"/>

                    <ImageView
                        android:id="@+id/iv_us_two"
                        android:layout_width="31dp"
                        android:layout_height="59dp"
                        android:layout_weight="1"
                        android:src="@drawable/guide_up"
                        android:visibility="visible"/>

                </LinearLayout>


                <ImageView
                    android:id="@+id/iv_us_three"
                    android:layout_width="0dp"
                    android:layout_height="31dp"
                    android:layout_weight="1"
                    android:src="@drawable/guide_up"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/iv_us_four"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:src="@drawable/guide_up"
                    android:visibility="invisible"/>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_us_down"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_144"
                android:layout_below="@+id/ll_us_up">

                <LinearLayout
                    android:layout_width="162dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_52"
                    android:layout_marginRight="@dimen/dp_52"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                </LinearLayout>

                <ImageView
                    android:id="@+id/undo_us"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_45"
                    android:src="@drawable/revocation" />

                <ImageView
                    android:id="@+id/eye_us"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_45"
                    android:src="@drawable/change_background" />

            </LinearLayout>
        </RelativeLayout>




    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_photo_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_send"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/guide_photo_info_send"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/iv_save"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:layout_marginTop="400dp"
            android:src="@drawable/guide_photo_info_save" />

    </RelativeLayout>

</RelativeLayout>