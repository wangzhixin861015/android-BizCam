<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/click_bg_selector">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_32"
            android:gravity="center">

            <TextView
                android:id="@+id/setting_name"
                style="@style/FontBlack14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/setting_instructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_name"
                android:textColor="#ADB4C1"
                android:textSize="12sp"
                android:visibility="gone" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/setting_right"
            android:layout_width="40dp"
            android:layout_height="@dimen/dp_112"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/dp_42"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_42"
            android:paddingTop="@dimen/dp_42"
            android:src="@drawable/chevron_right" />

        <TextView
            android:id="@+id/setting_parm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/setting_right"
            android:gravity="center"
            android:textColor="@color/sing_in_color"
            android:textSize="@dimen/dp_28" />

        <com.bcnetech.hyphoto.ui.view.SwitchButton
            android:id="@+id/switchButton"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_32"
            android:visibility="gone"
            app:sb_checked="false"
            app:sb_checked_color="#0057FF"
            app:sb_show_indicator="false"
            app:sb_uncheck_color="#F2F4F7">
            <!--  <SwitchButton
                  android:id="@+id/switchButton"
                  android:layout_width="50dp"
                  android:layout_height="30dp"
                  android:layout_centerVertical="true"
                  android:layout_alignParentRight="true"
                  android:visibility="gone"
                  android:layout_marginRight="@dimen/dp_32">-->

        </com.bcnetech.hyphoto.ui.view.SwitchButton>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginRight="@dimen/dp_28"
            android:background="@color/translucent_white" />
    </RelativeLayout>
</layout>