<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/newbg">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_320"
        android:background="@drawable/title_bg">

        <ImageView
            android:id="@+id/title_close"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_32"
            android:src="@drawable/new_close" />

        <TextView
            android:id="@+id/title_edit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_32"
            android:text="@string/edits"
            android:textColor="@color/sing_in_color"
            android:textSize="@dimen/dp_32" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <com.bcnetech.hyphoto.ui.view.DrawTextImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/dp_128"
                android:layout_height="@dimen/dp_128"
                android:layout_centerHorizontal="true"
                android:src="@drawable/head_customer" />

            <TextView
                android:id="@+id/tv_head"
                style="@style/FontBlack14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_head"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_28" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_head"
        android:background="@color/backgroud_new">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_upanddown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroud_new"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/upanddown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_38"
                    android:text="@string/upload_download_manage"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dp_24" />

                <com.bcnetech.hyphoto.ui.view.CameraSettingItemView
                    android:id="@+id/model_manager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_112"
                    android:visibility="gone" />

                <com.bcnetech.hyphoto.ui.view.CameraSettingItemView
                    android:id="@+id/bizcam_manager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_112" />

                <com.bcnetech.hyphoto.ui.view.CameraSettingItemView
                    android:id="@+id/upload_manaager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_112" />

                <com.bcnetech.hyphoto.ui.view.CameraSettingItemView
                    android:id="@+id/bizcam_ut"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_112"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_customer_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroud_new"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/customer_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_38"
                    android:text="@string/customer_service"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dp_24" />

                <com.bcnetech.hyphoto.ui.view.CameraSettingItemView
                    android:id="@+id/customer_service_manager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_112" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_newsetting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll_export"
                android:background="@color/backgroud_new"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/netsetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_38"
                    android:text="@string/net_setting"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dp_24" />

                <com.bcnetech.hyphoto.ui.view.CameraSettingItemView
                    android:id="@+id/cache_clear"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_112" />

                <com.bcnetech.hyphoto.ui.view.CameraSettingItemView
                    android:id="@+id/only_wifi"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_112"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_account_security"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroud_new"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/account_security"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_38"
                    android:text="@string/account_security"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dp_24" />

                <com.bcnetech.hyphoto.ui.view.CameraSettingItemView
                    android:id="@+id/account_security_manager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_112" />

                <com.bcnetech.hyphoto.ui.view.CameraSettingItemView
                    android:id="@+id/attach_manager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_112"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_help_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroud_new"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/help_feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_38"
                    android:text="@string/help_feedback"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dp_24" />


                <com.bcnetech.hyphoto.ui.view.CameraSettingItemView
                    android:id="@+id/feedback_manager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_112" />

                <com.bcnetech.hyphoto.ui.view.CameraSettingItemView
                    android:id="@+id/contract_manager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_112" />

                <com.bcnetech.hyphoto.ui.view.CameraSettingItemView
                    android:id="@+id/help_manager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_112"
                    android:visibility="visible"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_switch_account"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_200"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/dp_120"
                android:text="@string/switch_account"
                android:textColor="#00f"
                android:textSize="@dimen/dp_32" />
        </LinearLayout>
    </ScrollView>

    <com.bcnetech.hyphoto.ui.view.EditUserView
        android:id="@+id/edit_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</RelativeLayout>