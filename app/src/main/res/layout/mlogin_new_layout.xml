<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_number_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/color_white2"
            android:visibility="visible">

            <com.bcnetech.hyphoto.ui.view.TitleView
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_layout"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_32"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_22"
                    android:layout_toRightOf="@+id/tv_num"
                    android:textColor="@color/red_message"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/input_number_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:layout_below="@+id/ll_title"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_32"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@color/backgroud_new"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_weight="1">

                        <com.bcnetech.bcnetechlibrary.view.LimitBackEditText
                            android:id="@+id/input_number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:inputType="phone"
                            android:singleLine="true"
                            android:maxLength="13"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_item_child"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tv_input_number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:cursorVisible="false"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="@string/isphone"
                            android:textColor="@color/red_border"
                            android:textSize="16sp"
                            android:visibility="invisible" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/num_clear"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp"
                            android:src="@drawable/shape"
                            android:visibility="invisible" />

                        <ProgressBar
                            android:id="@+id/pb_num"
                            style="@style/LoginBarStyle"
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="@dimen/dp_42"
                            android:visibility="gone" />

                    </RelativeLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_num_next"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_32"
                    android:layout_weight="1"
                    android:background="@drawable/main_unable_bg"
                    android:gravity="center"
                    android:text="@string/next_step"
                    android:textColor="@color/color_white2" />

            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_pwd_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/color_white2"
            android:visibility="gone">

            <com.bcnetech.hyphoto.ui.view.TitleView
                android:id="@+id/title_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:id="@+id/ll_pwd_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_pwd"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_32"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密码"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_pwd_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_22"
                    android:layout_toRightOf="@+id/tv_num"
                    android:textColor="@color/text_item_child"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/input_pwd_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:layout_below="@+id/ll_pwd_title"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_32"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_pwd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@color/backgroud_new"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_weight="1">

                        <com.bcnetech.bcnetechlibrary.view.LimitBackEditText
                            android:id="@+id/input_pwd"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:inputType="textPassword"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_item_child"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_input_pwd"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:cursorVisible="false"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="@string/isphone"
                            android:textColor="@color/red_border"
                            android:textSize="16sp"
                            android:visibility="invisible" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/pwd_clear"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp"
                            android:src="@drawable/shape"
                            android:visibility="invisible" />

                        <ProgressBar
                            android:id="@+id/pb_pwd"
                            style="@style/LoginBarStyle"
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="@dimen/dp_42"
                            android:visibility="gone" />
                    </RelativeLayout>



                </LinearLayout>

                <TextView
                    android:id="@+id/tv_pwd_next"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_32"
                    android:layout_weight="1"
                    android:background="@drawable/main_unable_bg"
                    android:gravity="center"
                    android:text="@string/login"
                    android:textColor="@color/color_white2" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_verify_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/color_white2"
            android:visibility="gone">

            <com.bcnetech.hyphoto.ui.view.TitleView
                android:id="@+id/title_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:id="@+id/ll_verify_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_verify"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_32"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yanzhengma"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_22"
                    android:layout_toRightOf="@+id/tv_num"
                    android:text="@string/code_hint"
                    android:textColor="@color/text_item_child"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/input_verify_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:layout_below="@+id/ll_verify_title"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginRight="@dimen/dp_32"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/ll_verify"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@color/backgroud_new"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_weight="1">

                        <com.bcnetech.bcnetechlibrary.view.LimitBackEditText
                            android:id="@+id/input_verify"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:inputType="number"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_item_child"
                            android:textSize="28sp" />

                        <TextView
                            android:id="@+id/tv_input_verify"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:cursorVisible="false"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="@string/isphone"
                            android:textColor="@color/red_border"
                            android:textSize="16sp"
                            android:visibility="invisible" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/verify_clear"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp"
                            android:src="@drawable/shape"
                            android:visibility="invisible" />

                        <ProgressBar
                            android:id="@+id/pb_verify"
                            style="@style/LoginBarStyle"
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="@dimen/dp_42"
                            android:visibility="gone" />

                    </RelativeLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_verify_next"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_32"
                    android:layout_weight="1"
                    android:background="@drawable/main_unable_bg"
                    android:gravity="center"
                    android:text="@string/login"
                    android:textColor="@color/color_white2"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_rePwd_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/color_white2"
            android:visibility="gone">

            <com.bcnetech.hyphoto.ui.view.TitleView
                android:id="@+id/title_rePwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/ll_rePwd_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_rePwd"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_32"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_rePwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/psw"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_rePwdMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_22"
                    android:layout_toRightOf="@+id/tv_rePwd"
                    android:textColor="@color/text_item_child"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/input_rePwd_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:layout_below="@+id/ll_rePwd_title"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_32"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_rePwd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@color/backgroud_new"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_weight="1">


                        <com.bcnetech.bcnetechlibrary.view.LimitBackEditText
                            android:id="@+id/input_rePwd"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_item_child"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_input_rePwd"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:cursorVisible="false"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="@string/isphone"
                            android:textColor="@color/red_border"
                            android:textSize="16sp"
                            android:visibility="invisible" />

                    </RelativeLayout>


                    <ImageView
                        android:id="@+id/rePwd_clear"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:src="@drawable/shape"
                        android:visibility="invisible" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_rePwd_next"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_32"
                    android:layout_weight="1"
                    android:background="@drawable/main_unable_bg"
                    android:gravity="center"
                    android:text="@string/set_up"
                    android:textColor="@color/color_white2" />
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_login_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_164"
            android:layout_alignParentBottom="true"
            android:background="@color/color_white2"
            android:visibility="gone">


            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/logging_hint"
                android:textColor="@color/sing_in_color"
                android:textSize="18sp" />

            <ProgressBar
                android:id="@+id/pb_progressbar"
                style="@style/StyleProgressBarMini"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:max="1500"
                android:progress="0" />

            <!--<ProgressBar-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--style="@style/LoginBarStyle"-->
            <!--android:layout_toRightOf="@+id/tv_login"-->
            <!--android:layout_marginLeft="@dimen/dp_20"-->
            <!--android:layout_centerInParent="true"/>-->
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>