<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="282dp"
            android:layout_height="@dimen/dp_360"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="3dp"
            app:cardElevation="2dp"
            android:alpha="0"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_340"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/dialog_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_44"
                    android:layout_marginTop="@dimen/dp_44"
                    android:ellipsize="end"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/dialog_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dialog_title"
                    android:layout_marginLeft="@dimen/dp_44"
                    android:layout_marginRight="@dimen/dp_44"

                    android:layout_marginTop="@dimen/dp_28"
                    android:text=""
                    android:textColor="@color/sing_in_color"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_104"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:gravity="right|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dialog_cancel"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_72"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_0.5"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/cancel"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/dialog_ok"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_72"
                        android:layout_marginLeft="@dimen/dp_0.5"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/confirm"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</layout>